{
  "compilerOptions": {
    "composite": true,
    "target": "es2017",
    "module": "esnext",
    "moduleResolution": "node",
    "declaration": true,
    "declarationMap": true,
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "jsx": "react",
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "newLine": "lf",
    "typeRoots": [
      "../../src/@types",
      "./node_modules/@types"
    ]
  },
  "exclude": [
    "node_modules",
    "backup",
    "compiled",
    "dist"
  ]
}
