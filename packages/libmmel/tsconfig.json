{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": [
      "../../src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@": ["src/main"],
      "@/*": ["src/*"],
      "@paneron/libmmel/*": ["src/*"]
    }
  },
  "include": [
    "**.json",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
    "backup"
  ],
  "ts-node": {
    "transpileOnly": true,
    "require": [ "typescript-transform-paths/register" ],
    "files": true
  }
}
