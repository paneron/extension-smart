{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "isolatedModules": true,
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "skipLibCheck": true,
    "incremental": true,
    "experimentalDecorators": true,
    "allowJs": false,
    "jsx": "react",
    "newLine": "lf",
    "baseUrl": ".",
    "outDir": "dist",
    "rootDir": "src",
    "typeRoots": [
      "../../src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@": ["src/main"],
      "@/*": ["src/*"],
      "@paneron/libmmel/*": ["src/*"]
    }
  },
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
    "backup"
  ],
  "include": [
    "**.json",
    "src"
  ],
  "ts-node": {
    "files": true
  }
}
