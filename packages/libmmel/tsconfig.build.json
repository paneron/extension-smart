  "compilerOptions": {
    "esModuleInterop": true,
    "resolveJsonModule": true,
    "allowSyntheticDefaultImports": true,
    "rootDir": "src",
    "outDir": "dist"
  },
  "include": [
    "src"
  ],
  "exclude": [
    "paneron-for-tests/",
    "src/*.test.*",
    "spec/**/*.ts",
    "test/**/*.ts"
  ]
}
