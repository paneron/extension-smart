{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "paths": {
      "@": ["src/plugin"],
      "@/*": ["src/*"],
      "@paneron/libmmel/*": ["../libmmel/src/*"]
    }
  },
  "include": [
    "**.json",
    "*.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
    "backup"
  ],
  "ts-node": {
    "swc": true,
    "transpileOnly": true,
    "require": [ "typescript-transform-paths/register" ],
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true
  }
}
