{
  "extends": "../../tsconfig.base.json",
  "compilerOptions": {
    "outDir": "dist",
    "rootDir": "src",
    "baseUrl": ".",
    "typeRoots": [
      "../../src/@types",
      "./node_modules/@types"
    ],
    "paths": {
      "@": ["src/plugin"],
      "@/*": ["src/*"],
      "@paneron/libmmel/*": ["../libmmel/src/*"]
    }
  },
  "include": [
    "**.json",
    "*.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
    "backup"
  ]
}
