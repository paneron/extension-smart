{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "incremental": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "newLine": "lf",
    "declaration": true,
    "declarationMap": true,
    "jsx": "react",
    "outDir": "dist",
    "typeRoots": [
      "../../src/@types",
      "./node_modules/@types"
    ],
    "composite": true,
    "module": "esnext",
    "allowSyntheticDefaultImports": true,
    "resolveJsonModule": true,
    "esModuleInterop": true,
    "baseUrl": ".",
    "paths": {
      "@": ["src/plugin"],
      "@/*": ["src/*"],
      "@paneron/libmmel/*": ["../libmmel/src/*"]
    }
  },
  "include": [
    "**.json",
    "*.ts",
    "src"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
    "backup"
  ],
  "ts-node": {
    "swc": true,
    "compilerOptions": {
      "module": "CommonJS"
    },
    "files": true
  }
}
