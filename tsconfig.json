{
  "compilerOptions": {
    "target": "esnext",
    "module": "commonjs",
    "moduleResolution": "node",
    "strict": true,
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "newLine": "lf",
    "declaration": true,
    "jsx": "react",
    "outDir": "compiled",
    "allowJs": false
  },
  "exclude": [
    "node_modules",
    "dist",
    "compiled",
    "backup"
  ],
  "ts-node": {
    "files": true
  }
}
