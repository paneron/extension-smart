{
  "compilerOptions": {
    "target": "esnext",
    "module": "esnext",
    "moduleResolution": "node",
    "strict": true,
    "noUnusedLocals": true,
    "noFallthroughCasesInSwitch": true,
    "noImplicitReturns": true,
    "noImplicitAny": true,
    "sourceMap": true,
    "inlineSources": true,
    "allowSyntheticDefaultImports": true,
    "experimentalDecorators": true,
    "skipLibCheck": true,
    "lib": [
      "ES2021",
      "DOM"
    ],
    "newLine": "lf",
    "declaration": true,
    "jsx": "react",
    "outDir": "compiled"
  },
  "include": [
    "src",
    "spec"
  ],
  "exclude": [
    "dist",
    "compiled",
    "backup",
    "*.js"
  ]
}
